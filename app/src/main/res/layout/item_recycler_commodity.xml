<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="214dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/item_commodity_bg">
    <TextView
        android:id="@+id/tvDiscounts"
        android:layout_width="74dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="满20减2"
        android:textSize="12sp"
        android:textColor="@color/itemTextRed"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tvSurplus"
        android:layout_width="40dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="剩余06"
        android:textSize="12sp"
        android:textColor="@color/itemTextGray"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        />
    <ImageView
        android:id="@+id/ivCommodityImage"
        android:layout_width="93dp"
        android:layout_height="93dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDiscounts"
        android:layout_marginTop="14dp"
        android:src="@mipmap/default_image"
        />
    <TextView
        android:id="@+id/tvCommodityName"
        android:layout_width="80dp"
        android:layout_height="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCommodityImage"
        android:layout_marginTop="6dp"
        android:text="可口可乐"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/itemTextBlack"/>
    <TextView
        android:id="@+id/tvBuy"
        android:layout_width="109dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvCommodityName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bt_buy_bg"
        android:drawableRight="@mipmap/item_buy_icon"
        android:paddingRight="14dp"
        android:drawableLeft="@mipmap/rmb_icon"
        android:paddingStart="14dp"
        android:text="3.50"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/itemTextWhite"
        />

</androidx.constraintlayout.widget.ConstraintLayout>