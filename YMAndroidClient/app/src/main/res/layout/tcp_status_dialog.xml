<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="284dp"
    android:layout_height="143dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/collect_dialog_shape">
    <TextView
        android:id="@+id/remind"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="连接失败"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remind"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="（请检查网络或服务是否正常）"
        android:textSize="13sp"
        android:layout_marginTop="5pt"
        />
    <Button
        android:id="@+id/i_know"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/dialog_button_shape_blue"
        android:text="重试"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/cancel"
        android:layout_width="87dp"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/dialog_button_shape_gray"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

</android.support.constraint.ConstraintLayout>