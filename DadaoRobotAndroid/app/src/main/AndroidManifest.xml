<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dadao.dadaorobot">

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".base.DaDaoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/dadao_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dadao_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.SelectFileActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".Login.LoadActivity"
            android:theme="@style/LoadTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.view.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginActivityTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.NavigationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/navigationTheme" />
        <activity android:name=".activity.LogActivity" />
        <activity android:name=".activity.SettingActivity"
            android:screenOrientation="landscape"
            />
    </application>

</manifest>